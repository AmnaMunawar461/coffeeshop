{
  "version": 2,
  "buildCommand": "cd frontend && npm run build",
  "outputDirectory": "frontend/build",
  "routes": [
    {
      "src": "/api/products/categories",
      "dest": "/api/products.js"
    },
    {
      "src": "/api/products/featured/popular",
      "dest": "/api/products.js"
    },
    {
      "src": "/api/products/(.*)",
      "dest": "/api/products.js"
    },
    {
      "src": "/api/products",
      "dest": "/api/products.js"
    },
    {
      "src": "/api/auth/login",
      "dest": "/api/auth.js"
    },
    {
      "src": "/api/auth/register",
      "dest": "/api/auth.js"
    },
    {
      "src": "/api/auth/profile",
      "dest": "/api/auth.js"
    },
    {
      "src": "/api/auth/(.*)",
      "dest": "/api/auth.js"
    },
    {
      "src": "/api/cart/add",
      "dest": "/api/cart.js"
    },
    {
      "src": "/api/cart/(.*)",
      "dest": "/api/cart.js"
    },
    {
      "src": "/api/cart",
      "dest": "/api/cart.js"
    },
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*\\.(js|css|ico|png|jpg|jpeg|gif|svg|woff|woff2|ttf|eot))",
      "dest": "/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
